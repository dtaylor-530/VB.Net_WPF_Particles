    Title="Hopper" Loaded="Hopper_Loaded" Width="500" Height="500" WindowStartupLocation="CenterScreen" AllowsTransparency="False" WindowStyle="ThreeDBorderWindow" BorderThickness="10">
    <Grid x:Name="LayoutRoot" Background="#FF000000" UseLayoutRounding="True">
