                BorderThickness="1"
                BorderBrush="#FF909090" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Image UseLayoutRounding="True" Name="ImageViewport" HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" Stretch="Uniform" />
        </Border>
    </Grid>

</Window>
